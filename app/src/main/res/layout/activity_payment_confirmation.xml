<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="4dp"
    android:background="@drawable/background_style"
    android:layout_gravity="center_vertical"
    tools:context=".PaymentConfirmation">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Confirmed"
        android:textSize="24sp"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/check"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="Your order has been successfully placed. Delivery will take 2 business days. thank you for shopping with us. "/>
<Button
    android:id="@+id/okayBtn"
    android:layout_marginTop="16dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#8BBD58"
    android:textColor="@color/white"
    android:layout_marginBottom="8dp"
    android:text="Okay"/>
</LinearLayout>

</LinearLayout>